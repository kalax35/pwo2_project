@section scripts {
    <!-- Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
    <!-- Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!-- SignalR script to handle notifications. -->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var notificationHub = $.connection.notificationHub;

            // Create a function that the hub can call back to display notifications.
            notificationHub.client.receiveNotification = function (message) {
                // Add the notification to the page.
                $('#notifications').append('<li>' + message + '</li>');
            };

            // Start the connection.
            $.connection.hub.start().done(function () {
                // Optional: Do something after the connection is established.
            });
        });
    </script>
}