@model PWO.Client.Models.List.ToDoListDetailsDto

@{
    ViewBag.Title = "ToDo List Details";
}

<h2>ToDo List Details</h2>

<p>
    @Html.ActionLink("Share", "Share", "ToDoList", new { id = Model.Id }, null)
</p>
<p>
    @Html.ActionLink("Shares", "ShareUsers", "ToDoList", new { id = Model.Id }, null)
</p>
<p>
    @Html.ActionLink("Add new item", "Create", "ToDoListItem", new { id = Model.Id }, null)
</p>

<div>
    <h4>ToDoList</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Creation Time
        </dt>
        <dd class="col-sm-10">
            @Model.CreationTime
        </dd>
        <dt class="col-sm-2">
            Is Completed
        </dt>
        <dd class="col-sm-10">
            @Model.IsCompleted
        </dd>
    </dl>
</div>
<div>
    <h4>Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Creation Time</th>
                <th>Is Completed</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CreationTime</td>
                    <td>@item.IsCompleted</td>
                    <td>
                        @Html.ActionLink("Details", "Details", "ToDoListItem", new { toDoListItemId = item.Id, listId = Model.Id }, null) |
 |
                        @Html.ActionLink("Delete", "Delete", "ToDoListItem", new { id = item.Id }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</div>