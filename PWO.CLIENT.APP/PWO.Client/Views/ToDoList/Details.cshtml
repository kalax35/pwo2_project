@model PWO.Client.Models.List.ToDoListDetailsDto

@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>

<div style="display: flex; justify-content: space-evenly;">
    <p>
        @Html.ActionLink("Share", "Share", "ToDoList", new { id = Model.Id }, new { @class = "btn btn-success" })
    </p>
    <p>
        @Html.ActionLink("Shares", "ShareUsers", "ToDoList", new { id = Model.Id }, new { @class = "btn btn-secondary" })
    </p>
    <p>
        @Html.ActionLink("Add new item", "Create", "ToDoListItem", new { id = Model.Id }, new { @class = "btn btn-info" })
    </p>
</div>

<div>
    <h4>ToDoList</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Creation Time
        </dt>
        <dd class="col-sm-10">
            @Model.CreationTime
        </dd>
        <dt class="col-sm-2">
            Is Completed
        </dt>
        <dd class="col-sm-10">
            @Model.IsCompleted
        </dd>
    </dl>
</div>
<div>
    <h4>Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Creation Time</th>
                <th>Is Completed</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CreationTime</td>
                    <td>@item.IsCompleted</td>
                    <td>
                        @Html.ActionLink("Details", "Details", "ToDoListItem", new { toDoListItemId = item.Id, listId = Model.Id }, new { @class = "btn btn-secondary" })
 
                        @Html.ActionLink("Delete", "Delete", "ToDoListItem", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="buttons-options">

    @Html.ActionLink("Mark as completed", "Edit", new { id = Model.Id }, new { @class = "btn btn-success" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>