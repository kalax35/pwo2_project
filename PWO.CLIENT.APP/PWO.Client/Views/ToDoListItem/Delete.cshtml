@model PWO.Client.Models.Items.ToDoListItemReadDto

@{
    ViewBag.Title = "Delete ToDo List Item";
}

<h2>Delete ToDo List Item</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ToDoListItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>

        @*<dd class="col-sm-10">
            @Model.Name
        </dd>*@
        <dt class="col-sm-2">
            Creation Time
        </dt>

