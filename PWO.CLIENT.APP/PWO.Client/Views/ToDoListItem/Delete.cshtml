@model PWO.Client.Models.Items.ToDoListItemReadDto

@{
    ViewBag.Title = "Delete ToDo List Item";
}

<h2>Delete @Model.Name item</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Creation Time
        </dt>

        <dd class="col-sm-10">
            @Model.CreationTime
        </dd>
        <dt class="col-sm-2">
            Is Completed
        </dt>

        <dd class="col-sm-10">
            @Model.IsCompleted
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Details", "ToDoList", new { id = Model.listId }, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
